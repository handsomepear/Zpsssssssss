.banner {
  width: 100%;
}
.banner image {
  width: 100%;
}

.index-mid {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 35rpx 30rpx;
  border-bottom: 5rpx solid #f4f4f4;
}

.index-mid .remain,
.index-mid .mid-options {
  display: flex;
  flex: 1;
  align-items: flex-end;
}

.remain-quantity {
  font-size: 35rpx;
  color: #ff6c00;
  margin-right: 12rpx;
}

.juzi-img {
  margin-left: 10rpx;
}

.mid-options {
  display: flex;
  justify-content: flex-end;
}

.mid-options .auth-btn-init {
  width: 156rpx;
  height: 60rpx;
  line-height: 60rpx;
  border: 2rpx solid #ff6c00;
  border-radius: 10rpx;
  color: #ff6c00;
  text-align: center;
  font-size: 28rpx;
  box-sizing: content-box;
}
.mid-options .recharge,
.mid-options .get {
  width: 156rpx;
  height: 60rpx;
  font-size: 28rpx;
  line-height: 60rpx;
  border: 2rpx solid #ff6c00;
  border-radius: 10rpx;
  color: #ff6c00;
  text-align: center;
  background-color: #fff;
  box-sizing: content-box;
}
.recharge {
  margin-right: 20rpx;
}

.send-con {
  padding: 0 30rpx;
  margin-top: 57rpx;
}

.quantity-con {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.quantity {
  display: flex;
  align-items: center;
}
.quantity input {
  width: 120rpx;
  font-size: 28rpx;
  text-align: right;
  margin-right: 20rpx;
}

.send-btn .auth-btn-init {
  width: 100%;
  height: 92rpx;
  margin-top: 55rpx;
}
.send-btn .auth-fill{
  width: 100%;
  height: 92rpx;
  text-align: center;
  line-height: 92rpx;
  font-size: 34rpx;
  background-color: #ff6c00;
  color: #fff;
  border-radius: 10rpx;
}
.ps {
  color: #929292;
  font-size: 24rpx;
  margin-top: 15rpx;
}
