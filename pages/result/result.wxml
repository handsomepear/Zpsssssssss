<view class="result">
  <view class="result-card" style="height: {{isx ? '1300rpx' : '1100rpx'}}">
    <view class="user-about">
      <view class="avatar">
        <image src="{{avatar}}" />
      </view>
      <view class="username">{{nickName}}</view>
      <view class="quantity">
        <text>{{currentGameOrange}}</text>
        个
        <image src="/static/imgs/juzi.png" class="juzi-img" mode="widthFix" />
      </view>
      <block wx:if="{{showResultState && pullState === '1'}}">
        <block wx:if="{{gameState === 1}}">
          <view class="getFinished">手慢了，橘子已被领完</view>
        </block>
        <block wx:if="{{gameState === 2}}">
          <view class="getFinished">已超过24小时，无法领取</view>
        </block>
      </block>
    </view>
    <view class="card-info">
      <scroll-view class="result-list" style="height: {{isx ? '880rpx' : '670rpx'}}" scroll-y="{{true}}">
        <block wx:if="{{getList.length > 0}}">
          <!-- <view class="get-state">橘子已领完</view> -->
          <block wx:for="{{getList}}" wx:key="{{index}}">
            <view class="result-item">
              <view class="item-avatar">
                <image src="{{item.avatarUrl}}" />
              </view>
              <view class="item-info">
                <view class="item-username-time">
                  <view class="item-username">{{item.nickName}}</view>
                  <view class="item-time">{{item.time}}</view>
                </view>
                <view class="item-quantity" wx:if="{{isSelf}}">领了 1 个橘子，并叫了您一声{{item.call}}</view>
                <view class="item-quantity" wx:else>领了 1 个橘子，并叫了{{nickName}}一声{{item.call}}</view>
              </view>
            </view>
          </block>
        </block>
        <block wx:else>
          <block wx:if="{{gameState == 3}}">
            <view class="empty">您分享的橘子长时间无人领取，已返回到您账户～</view>
          </block>
          <block wx:else>
            <view class="empty">还没有人领取您的橘子，快分享出去让别人领你的橘子吧～</view>
          </block>
        </block>
      </scroll-view>
      <view class="options">
        <!-- 发好友 -->
        <form report-submit="{{true}}" bindsubmit="saveFormId">
          <button form-type="submit" open-type="share" plain="{{true}}" class="share-btn">
            <!-- 发好友 -->
            <view class="share">
              <image src="../../static/imgs/share-icon.png" binderror="" bindload=""></image>
              <view>分享给好友</view>
            </view>
          </button>
        </form>
        <!-- 我要做爸爸 -->
        <form report-submit="{{true}}" bindsubmit="saveFormId">
          <button form-type="submit" class="auth-btn-init" plain="{{true}}" bindtap="sendOrangeHandle">
            <view class="send">我要做爸爸</view>
          </button>
        </form>
      </view>
    </view>
  </view>
</view>