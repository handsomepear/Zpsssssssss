page {
    background-color: #000;
}
.video-page {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
}
.image-page {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
}
.image{
    position: relative;
    flex: 1;
    width: 100%;
    height: 1076rpx;
}
.gif-img, .gif-img image {
    width: 100%;
    height: 100%;
}

/* 封面图 */
.image .poster {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
}
.image .poster-modal {
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.4);
}
.poster image {
    position: absolute;
}
.poster .text1,
.poster .text2 {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    color: #fff;
    font-size: 44rpx;
}

.poster .text1 {
    bottom: 150rpx;
}
.poster .text2 {
    bottom: 90rpx;
}
.poster .hand-img {
    width: 184rpx;
    height: 219rpx;
    top: 50%;
    left: 50%;
    transform: translate(-40%, 50%);
}
.poster .play-img {
    width: 230rpx;
    height: 275rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}
.image .name-con {
    position: absolute;
    width: 220rpx;
    padding: 20rpx 30rpx;
    border-radius: 10rpx;
    transition: all 1s ease-in-out;
}

.name-con view {
    font-size: 44rpx;
    color: #4a412f;
    width: 100%;
    height: 100%;
    text-align: center;
    text-overflow: ellipsis;

}
.image .name-con.show {
    opacity: 1;
}
.image .name-con.hide {
    opacity: 0;
}

.image .auth-btn-init {
    position: absolute;
    width: 230rpx;
    height: 275rpx;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    /* transform: translateY(-44rpx); */
    z-index: 99;
}

.image .play-btn {
    width: 230rpx;
    height: 275rpx;
}

/* 底部操作按钮 */
.options {
    position: relative;
    display: flex;
    justify-content: space-between;
    padding: 0 30rpx;
    margin-top: 35rpx;
}
.options .auth-btn-init,
.options .share-btn,
.options form image {
    width: 210rpx;
    height: 72rpx;
}
/* 分享 */
.share-modal-wrap {
    position: fixed;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.8);
    z-index: 101;
}

.share-modal {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    position: absolute;
    width: 630rpx;
    height: 300rpx;
    padding: 30rpx;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    background-color: #fff;
    box-sizing: border-box;
    border-radius: 20rpx;
}
.share-modal .share-title {
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 34rpx;
    line-height: 60rpx;
    margin-top: 40rpx;
}
.share-modal .share-title image {
    width: 60rpx;
    height: 60rpx;
    margin-right: 20rpx;
}
.share-modal .share-modal-img {
    width: 90%;
    height: 300rpx;
}

.share-modal .close-btn {
    position: absolute;
    right: 0;
    top: 0;
    width: 30rpx;
    height: 30rpx;
    padding: 20rpx;
}
.close-btn image {
    width: 100%;
    height: 100%;
}
.share-modal .share-btn {
    width: 60%;
    height: 92rpx;
}
.share-modal .share-btn image {
    width: 100%;
    height: 100%;
}


/* 领取成功提示 */
.tips {
    position: absolute;
    right: 10rpx;
    top: -118rpx;
    width: 372rpx;
    height: 108rpx;
}
.tips-text {
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    width: 100%;
    line-height: 1;
    top: 28rpx;
    left: 0;
    font-size: 26rpx;
}

.tips-text .juzi-img {
    margin-left: 4rpx;
    margin-top: -10rpx;
}
.tips .bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}