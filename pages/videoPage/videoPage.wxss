page {
    background-color: #000;
}
.video-page {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
}
.image-page {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
}
.image{
    position: relative;
    flex: 1;
    width: 100%;
    height: 1076rpx;
}
.gif-img, .gif-img image {
    width: 100%;
    height: 100%;
}

/* 封面图 */
.image .poster {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
}
.image .poster-modal {
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.4);
}
.poster image {
    position: absolute;
}
.poster .text1,
.poster .text2 {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    color: #fff;
    font-size: 44rpx;
}

.poster .text1 {
    bottom: 150rpx;
}
.poster .text2 {
    bottom: 90rpx;
}
.poster .hand-img {
    width: 184rpx;
    height: 219rpx;
    top: 50%;
    left: 50%;
    transform: translate(-40%, 50%);
}
.poster .play-img {
    width: 230rpx;
    height: 275rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}
.image .name-con {
    position: absolute;
    width: 220rpx;
    padding: 20rpx 30rpx;
    border-radius: 10rpx;
    transition: all 1s ease-in-out;
}

.name-con view {
    font-size: 44rpx;
    color: #777777;
    font-weight: bolder;
    width: 100%;
    height: 100%;
    text-align: center;
    text-overflow: ellipsis;

}
.image .name-con.show {
    opacity: 1;
}
.image .name-con.hide {
    opacity: 0;
}

.image .auth-btn-init {
    position: absolute;
    width: 230rpx;
    height: 275rpx;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    /* transform: translateY(-44rpx); */
    z-index: 99;
}

.image .play-btn {
    width: 230rpx;
    height: 275rpx;
}

/* 底部操作按钮 */
.options {
    position: relative;
    display: flex;
    justify-content: space-around;
    padding: 0 30rpx;
    margin-top: 40rpx;
}
.options .auth-btn-init,
.options .share-btn,
.options form  {
    color: #fff;
    width: 310rpx;
    height: 72rpx;
    font-size: 32rpx;
    line-height: 72rpx;
}
.options .send {
    background-color: #ff6c00;
}
.options .share {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #1aad19;
}
.options .share image {
    width: 36rpx;
    height: 37rpx;
    margin-right: 10rpx;
}




/* 领取成功提示 */
.tips {
    position: absolute;
    right: 10rpx;
    top: -118rpx;
    width: 372rpx;
    height: 108rpx;
}
.tips-text {
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    width: 100%;
    line-height: 1;
    top: 28rpx;
